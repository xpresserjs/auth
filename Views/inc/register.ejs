<form class="mb-3" method="post" action="<%= ctx.route('auth.register') %>">
    <div class="form-group">
        <label for="<%= form.primaryKey %>">Email:</label>
        <input value="<%= ctx.old(form.primaryKey) %>" type="email" class="form-control shadow-sm"
               name="<%= form.primaryKey %>"
               placeholder="Email" required>
    </div>

    <div class="form-group">
        <label for="<%= form.password %>">Password:</label>
        <input type="password" class="form-control shadow-sm" name="<%= form.password %>" placeholder="Password"
               required>
    </div>

    <div class="form-group">
        <label for="<%= form.name %>">Name:</label>
        <input value="<%= ctx.old(form.name) %>" type="text" class="form-control shadow-sm" name="<%= form.name %>"
               placeholder="Name" required>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-danger">
            Register
        </button>
        <span class="ml-2 mr-2 text-muted">OR</span>
        <a href="?action=login" class="btn btn-secondary">
            Login
        </a>
    </div>
</form>
